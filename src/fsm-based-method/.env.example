# Retrieval backend selection
WEB_SEARCH_PROVIDER=serpapi

# LLM backend
LLM_ENDPOINT=http://127.0.0.1:1025

# Web search providers (set one or more)
SERPAPI_KEY=
TAVILY_API_KEY=

### Hyperparameters ###
TOP_N=3
N_RETRY=2
# NLI thresholds (tune to reduce false SUPPORT / NEI bias)
NLI_NEUTRAL_RATIO=0.15
NLI_NEUTRAL_OVERLAP=1
NLI_NEG_REFUTE_RATIO=0.25
NLI_OPP_REFUTE_RATIO=0.22
NLI_NUM_REFUTE_RATIO=0.25
NLI_YEAR_REFUTE_RATIO=0.2
NLI_SUPPORT_HIGH_RATIO=0.5
NLI_SUPPORT_MED_RATIO=0.32
# Verdict aggregation thresholds
DECIDE_REFUTE_MIN=1.5
DECIDE_REFUTE_MARGIN=0.5
DECIDE_REFUTE_HIGH=2.5
DECIDE_SUPPORT_MIN=1.8
DECIDE_SUPPORT_MARGIN=0.7
DECIDE_SUPPORT_HIGH=3.0

# Local KB / evidence store
KB_PATH=./runtime/evidence.jsonl

# Wiki sentence expansion (improves evidence quality)
WIKI_FETCH_LIMIT=2
WIKI_MAX_BYTES=200000
WIKI_TIMEOUT=10
